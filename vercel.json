{
    "version": 2,
    "builds": [
        {
            "src": "ai-space-cafe.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "250mb",
                "runtime": "python3.9",
                "buildCommand": "pip install -r requirements.txt --no-cache-dir",
                "installCommand": "apt-get update && apt-get install -y postgresql-client"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "ai-space-cafe.py"
        }
    ],
    "env": {
        "FLASK_APP": "ai-space-cafe.py",
        "FLASK_ENV": "production"
    }
} 